<?xml version="1.0" encoding="utf-8" ?> 

<RecordDescriptionSet Name="Patient Management" 
                 Identifier="PM" 
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation=".\RecordDescriptionSet.XSD">
  
  <RecordDescriptions>

    <!-- Patient -->
    <RecordDescription Identifier="Patient">
      <ColumnDescription Identifier="PatientId" Datatype="Guid"/>
      <ColumnDescription Identifier="PatientRecordNumber" Datatype="String"/>
      <ColumnDescription Identifier="HospitalId" Datatype="String"/>
      <ColumnDescription Identifier="Medication" Datatype="String"/>
      <ColumnDescription Identifier="ConsentStatus" Datatype="Int16"/>
      <ColumnDescription Identifier="NicuStatus" Datatype="Int16"/>
      <ColumnDescription Identifier="ExternalCreationTimeStamp" Datatype="DateTime"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
      <ColumnDescription Identifier="Modified" Datatype="DateTime"/>
      <ComplexColumnDescription Identifier="PatientContact" RecordDescription="Contact"/>
      <ComplexColumnDescription Identifier="MotherContact" RecordDescription="Contact"/>
      <ComplexColumnDescription Identifier="CaregiverContact" RecordDescription="Contact"/>
      <ComplexColumnDescription Identifier="PediatricianContact" RecordDescription="Contact"/>
      <ComplexColumnDescription Identifier="RiskIndicators" RecordDescription="PatientRiskIndicator" IsArray="True"/>
      <ComplexColumnDescription Identifier="PredefinedComments" RecordDescription="PredefinedCommentAssociation" IsArray="True"/>
      <ComplexColumnDescription Identifier="AudiologyTests" RecordDescription="AudiologyTestInformation" IsArray="True"/>
    </RecordDescription>

    <!-- Contact data for different types of contacts -->
    <RecordDescription Identifier="Contact">
      <ColumnDescription Identifier="Id" Datatype="Guid"/>
      <ColumnDescription Identifier="PatientId" Datatype="Guid"/>
      <ColumnDescription Identifier="ContactRelationType" Datatype="Int16"/>
      <ColumnDescription Identifier="Title" Datatype="String"/>
      <ColumnDescription Identifier="Forename1" Datatype="String"/>
      <ColumnDescription Identifier="Forename2" Datatype="String"/>
      <ColumnDescription Identifier="Initial" Datatype="String"/>
      <ColumnDescription Identifier="Surname" Datatype="String"/>
      <ColumnDescription Identifier="AlsoKnownAs" Datatype="String"/>
      <ColumnDescription Identifier="DateOfBirth" Datatype="DateTime"/>
      <ColumnDescription Identifier="Gender" Datatype="Int32"/>
      <ColumnDescription Identifier="Height" Datatype="String"/>
      <ColumnDescription Identifier="Weight" Datatype="String"/>
      <ColumnDescription Identifier="BirthLocation" Datatype="String"/>
      <ColumnDescription Identifier="LanguageCode" Datatype="String"/>
      <ColumnDescription Identifier="NationalityCode" Datatype="String"/>
      <ColumnDescription Identifier="SocialSecurityNumber" Datatype="String"/>
      <ColumnDescription Identifier="EMail1" Datatype="String"/>
      <ColumnDescription Identifier="EMail2" Datatype="String"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
      <ColumnDescription Identifier="Modified" Datatype="DateTime"/>
      <ComplexColumnDescription Identifier="PrimaryAddress" RecordDescription="Address"/>
      <ComplexColumnDescription Identifier="AdditionalAddresses" RecordDescription="Address" IsArray="True"/>
    </RecordDescription>

    <!-- Address data for a contact -->
    <RecordDescription Identifier="Address">
      <ColumnDescription Identifier="Id" Datatype="Guid"/>
      <ColumnDescription Identifier="AddressType" Datatype="Int16"/>
      <ColumnDescription Identifier="Address1" Datatype="String"/>
      <ColumnDescription Identifier="Address2" Datatype="String"/>
      <ColumnDescription Identifier="Zip" Datatype="String"/>
      <ColumnDescription Identifier="City" Datatype="String"/>
      <ColumnDescription Identifier="State" Datatype="String"/>
      <ColumnDescription Identifier="Country" Datatype="String"/>
      <ColumnDescription Identifier="Phone" Datatype="String"/>
      <ColumnDescription Identifier="Fax" Datatype="String"/>
      <ColumnDescription Identifier="State" Datatype="String"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
      <ColumnDescription Identifier="Modified" Datatype="DateTime"/>
    </RecordDescription>

    <!-- Risk Indicators in the system -->
    <RecordDescription Identifier="RiskIndicator">
      <ColumnDescription Identifier="RiskIndicatorId" Datatype="Guid"/>
      <ColumnDescription Identifier="IsActive" Datatype="Boolean"/>
      <ColumnDescription Identifier="Language" Datatype="String"/>
      <ColumnDescription Identifier="Name" Datatype="String"/>
      <ColumnDescription Identifier="Description" Datatype="String"/>
      <ColumnDescription Identifier="PreventScreening" Datatype="Boolean"/>
    </RecordDescription>

    <!-- Risk indicators assigned to a patient -->
    <RecordDescription Identifier="PatientRiskIndicator">
      <ColumnDescription Identifier="PatientId" Datatype="Guid"/>
      <ColumnDescription Identifier="RiskIndicatorId" Datatype="Guid"/>
      <ColumnDescription Identifier="PatientRiskIndicatorValue" Datatype="Int8"/>
    </RecordDescription>

    <!-- Predefined comments in the system -->
    <RecordDescription Identifier="PredefinedComment">
      <ColumnDescription Identifier="PredefinedCommentId" Datatype="Guid"/>
      <ColumnDescription Identifier="BaseText" Datatype="String"/>
      <ColumnDescription Identifier="IsActive" Datatype="Boolean"/>
    </RecordDescription>

    <!-- Predefined comments in the system -->
    <RecordDescription Identifier="PredefinedCommentAssociation">
      <ColumnDescription Identifier="AssociationId" Datatype="Guid"/>
      <ColumnDescription Identifier="ReferenceId" Datatype="Guid"/>
      <ColumnDescription Identifier="PredefinedCommentId" Datatype="Guid"/>
      <ColumnDescription Identifier="CreationDate" Datatype="DateTime"/>
      <ColumnDescription Identifier="UserAccountId" Datatype="Guid"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
    </RecordDescription>

    <!-- free text comments in the system -->
    <RecordDescription Identifier="FreeTextComment">
      <ColumnDescription Identifier="Id" Datatype="Guid"/>
      <ColumnDescription Identifier="ReferenceId" Datatype="Guid"/>
      <ColumnDescription Identifier="BaseText" Datatype="String"/>
      <ColumnDescription Identifier="CreationDate" Datatype="DateTime"/>
      <ColumnDescription Identifier="UserAccountId" Datatype="Guid"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
    </RecordDescription>    
      
    <RecordDescription Identifier="AudiologyTestInformation">
      <ColumnDescription Identifier="Id" Datatype="Guid"/>
      <ColumnDescription Identifier="PatientId" Datatype="Guid"/>
      <ColumnDescription Identifier="TestObject" Datatype="UInt16"/>
      <ColumnDescription Identifier="TestType" Datatype="UInt16"/>
      <ColumnDescription Identifier="TestProcedure" Datatype="UInt16"/>
      <ColumnDescription Identifier="TestDate" Datatype="DateTime"/>
      <ColumnDescription Identifier="Duration" Datatype="UInt16"/>
      <ColumnDescription Identifier="RightTestObjectTestResult" Datatype="UInt16"/>
      <ColumnDescription Identifier="LeftTestObjectTestResult" Datatype="UInt16"/>
      <ColumnDescription Identifier="FacilityId" Datatype="Guid"/>
      <ColumnDescription Identifier="FacilityLocationId" Datatype="Guid"/>
      <ColumnDescription Identifier="InstrumentId" Datatype="Guid"/>
      <ColumnDescription Identifier="ProbeId" Datatype="Guid"/>
      <ColumnDescription Identifier="UserAccountID" Datatype="Guid"/>
      <ColumnDescription Identifier="Created" Datatype="DateTime"/>
      <ColumnDescription Identifier="Modified" Datatype="DateTime"/>
    </RecordDescription>
  
    <!-- Patient Fields Configuration -->
    <RecordDescription Identifier="PatientFieldConfiguration">
      <ColumnDescription Identifier="Field1Id" Datatype="String"/>
      <ColumnDescription Identifier="Field1MandatoryLevel" Datatype="String"/>
      <ColumnDescription Identifier="Field1ValidationAlgorithm" Datatype="String"/>
    </RecordDescription>

  </RecordDescriptions>

</RecordDescriptionSet>